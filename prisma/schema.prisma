generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Posts {
  id Int @default(autoincrement()) @id
  title String
  body String
  comments Comment[]
}

model Comment {
  id Int @default(autoincrement()) @id
  comment String
  post Posts @relation(fields: [postId], references: [id])
  postId Int
}